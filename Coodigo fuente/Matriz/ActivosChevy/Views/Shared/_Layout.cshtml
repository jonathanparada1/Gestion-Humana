<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - ChevyPlan</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script  type="text/javascript" charset="utf-8" src='@Url.Content("~/Scripts/jquery-1.7.1.min.js")'></script>

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script  type="text/javascript" charset="utf-8" src='@Url.Content("~/Scripts/js/global.js")'></script>
    </head>
    <body>        
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                   @* <p class="site-title">@Html.ActionLink("su logotipo aquí", "Index", "Home")</p>*@
                </div>
                <div class="float-right">
                    @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                    <nav>
                        <ul id="menu">
                           @* <li>@Html.ActionLink("Index ", "Index", "Home")</li>*@
                          @*  <li>@Html.ActionLink("Gestion Usuario", "Index", "Gestion")</li>
                            <li>@Html.ActionLink("Gestion Tecnologia", "Index", "Tecnologia")</li>
                            <li>@Html.ActionLink("Reporte", "Index", "Reporte")</li>*@
                             

                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy Chevyplan S.A - MVC - @DateTime.Now.Year </p>
                   
                </div>
            </div>
        </footer>

        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        <script  type="text/javascript" charset="utf-8" src='@Url.Content("~/Scripts/jquery.dataTables.js")'></script>
         
        @RenderSection("scripts", required: false)
    </body>
</html>
